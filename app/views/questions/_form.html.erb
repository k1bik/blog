<%= simple_form_for @question, defaults: { input_html: { class: 'mb-3' } } do |f|%>
  <%= f.input :title, minlength: Question::MIN_TITLE_LENGTH, maxlength: Question::MAX_TITLE_LENGTH,
    placeholder: 'Title for question' %>

  <%= f.input :body, minlength: Question::MIN_BODY_LENGTH, maxlength: Question::MAX_BODY_LENGTH %>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
