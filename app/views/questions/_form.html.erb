<%= form_with model: @question do |f|%>
	<div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title, minlength: Question::MIN_TITLE_LENGTH, maxlength: Question::MAX_TITLE_LENGTH %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, minlength: Question::MIN_BODY_LENGTH, maxlength: Question::MAX_BODY_LENGTH,
        placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Create question!", class: 'btn btn-primary' %>
<% end %>
