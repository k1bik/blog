<style>
  .question_buttons{
    display: flex;
    flex-direction: row;
  }
</style>

<article class="card mt-3">
  <div class="card-body">
    <h4><%= question.title %></h2>
    <section class="card-text">
      <time>
        <small><%= question.formated_date %></small>
      </time>
      <div class="my-2">
        <%= truncate strip_tags(question.body), length: 120, omission: '... (continued)' %>
      </div>
    </section>
    <div class="question_buttons">
      <%= link_to 'Show', question_path(question), class: 'btn btn-primary' %> 
      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary mx-2' %>
      <%= button_to 'Destroy', question_path(question), method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</article>
