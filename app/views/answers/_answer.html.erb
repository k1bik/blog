<article class="mb-3 card">
  <div class="card-body">
    <section class="card-text">
      <small>
        <time datetime="<%= answer.formated_date %>">
          <%= answer.formated_date %>
        </time> 
      </small>
      <div class="mt-2 mb-3">
        <%= sanitize answer.body %>
      </div>
    </section>
    <%= link_to 'Edit', edit_question_answer_path(question, answer), class: 'btn btn-info btn-sm' %>
    <%= button_to 'Destroy', question_answer_path(question, answer), method: :delete, class: 'btn btn-danger mb-2' %>
  </div>
</article>
